<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Text Style</title>
    <style>
        /* Initial styling for the text message */
        #myText {
            background-color: red;
            color: blue;
            font-size: 10px;
            font-family: "Times New Roman", Times, serif;
            padding: 10px;
            width: fit-content;
            margin: 20px auto;
        }
    </style>
</head>
<body>
    <h2>Change Text Style Example</h2>
    
    <!-- Text message -->
    <div id="myText">This is a sample text message.</div>

    <!-- Button to change style -->
    <button onclick="changeTextStyle()">Change Text Style</button>

    <script>
        function changeTextStyle() {
            const text = document.getElementById("myText");
            // Change the style properties
            text.style.backgroundColor = "green";
            text.style.color = "yellow";
            text.style.fontSize = "12px";
            text.style.fontWeight = "bold";
        }
    </script>
</body>
</html>
